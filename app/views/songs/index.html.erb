<h1>Listing songs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Treble C</th>
    <th>Bass C</th>
    <th>Treble Bb</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td> <% if song.trebleC %>
      <%= link_to song.trebleC, asset_path(song.trebleC), :class => "links" %>
    <% end %></td>
    <td> <% if song.bassC %>
      <%= link_to song.bassC, asset_path(song.bassC), :class => "links" %>
    <% end %></td>
    <td> <% if song.trebleBb %> 
      <%= link_to song.trebleBb, asset_path(song.trebleBb), :class => "links" %>
    <% end %></td>
    <td><%= link_to 'Show', song %></td>
    <% if can? :destroy, Song %>
      <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

